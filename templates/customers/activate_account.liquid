<!-- /templates/customers/activate_account.liquid -->
<div class="{{ settings.theme_layout_type }} wrap-page">
  <div class="row">
    <div class="col-sm-4">

      <h1>{{ 'customer.activate_account.title' | t }}</h1>
      <p>{{ 'customer.activate_account.subtext' | t }}</p>

      {% comment %}
        This form must use 'activate_customer_password'
      {% endcomment %}
      <div class="form-vertical">
        {% form 'activate_customer_password' %}

          {{ form.errors | default_errors }}

          <div class="form-group">
            <label for="CustomerPassword" class="hidden-label">{{ 'customer.activate_account.password' | t }}</label>
            <input type="password" value="" name="customer[password]" id="CustomerPassword" class="form-control" placeholder="{{ 'customer.activate_account.password' | t }}">
          </div>

          <div class="form-group">
            <label for="CustomerPasswordConfirmation" class="hidden-label">{{ 'customer.activate_account.password_confirm' | t }}</label>
            <input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" class="form-control" placeholder="{{ 'customer.activate_account.password_confirm' | t }}">
          </div>

          <div class="text-center">
            <p>
              <input type="submit" class="btn" value="{{ 'customer.activate_account.submit' | t }}">
            </p>
            <input type="submit" class="btn--secondary" name="decline" value="{{ 'customer.activate_account.cancel' | t }}">
          </div>
        {% endform %}
      </div>

    </div>
  </div>
</div>