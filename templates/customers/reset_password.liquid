<!-- /templates/customers/reset_password.liquid -->
<div class="{{ settings.theme_layout_type }} wrap-page">
  <div class="row">
    <div class="col-sm-4 col-lg-3 form-vertical">
      {% form 'reset_customer_password' %}

        <h1>{{ 'customer.reset_password.title' | t }}</h1>

        <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

        {{ form.errors | default_errors }}

        <div class="form-group">
          <label for="ResetPassword" class="hidden-label">{{ 'customer.reset_password.password' | t }}</label>
          <input type="password" value="" name="customer[password]" id="ResetPassword" class="form-control input-full{% if form.errors contains 'password' %} error{% endif %}" placeholder="{{ 'customer.reset_password.password' | t }}">
        </div>

        <div class="form-group">
          <label for="PasswordConfirmation" class="hidden-label">{{ 'customer.reset_password.password_confirm' | t }}</label>
          <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="form-control input-full{% if form.errors contains 'password_confirmation' %} error{% endif %}" placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
        </div>
        
        <div class="text-center">
          <input type="submit" class="btn btn--full" value="{{ 'customer.reset_password.submit' | t }}">
        </div>

      {% endform %}
    </div>
  </div>
</div>