{% endcomment %}

{% assign slider_class = "normal-slider" %}

  <style type="text/css">
    body #slider{visibility: hidden;}
    body #slider.owl-loaded{visibility: visible;}

    {% if settings.slideshow_type == "slideshow_type_fullscreen" %}
      body #header{border-bottom: none}
      body .free-shipping-wrap .fa, body .free-shipping-wrap{color: {{ settings.slide_text_color }};border: none;}
      body .slideshow_type_fullscreen .search-activate.active a .fa{color: #ccc}
      body .search-activate a .fa{color: {{ settings.slide_text_color }} }
      body #main-navigation > li > a{color: {{ settings.slide_text_color }} }
      body #main-navigation > li > a:hover{color: {{ settings.slide_text_color }};border-color: {{ settings.slide_text_color }}}
      
      body #header .navbar-brand{color: {{ settings.slide_text_color }} }
      {% assign slider_class = "overflow-slider" %}
    {% endif %}

    body #slider .item-text p, body #slider .item-text h2{color: {{ settings.slide_text_color }} }
    body #slider .item-text a{color: {{ settings.slide_button_color_text }} ; background-color: {{ settings.slide_button_color }} }
    body #slider .item-text a:hover{color: {{ settings.slide_button_color_text_hover }} ; background-color: {{ settings.slide_button_color_hover }} }
  </style>


<div id="slider" class="{{ slider_class }}">
  {% if settings.slide_1_show == true %}
    <div class="item">      
      <img src="{{ 'slide_1.jpg' | asset_url }}" />
      <div class="item-text {{ settings.slide_1_position }}">
        <h2>{{ settings.slide_1_title }}</h2>
        <p>{{ settings.slide_1_subtitle }}</p>
        <a href="{{ settings.slide_1_link }}" class="btn btn-default">{{ settings.slide_1_button_text }}</a>
      </div>
    </div>
  {% endif %}

  {% if settings.slide_2_show == true %}
    <div class="item">      
      <img src="{{ 'slide_2.jpg' | asset_url }}" />
      <div class="item-text {{ settings.slide_2_position }}">
        <h2>{{ settings.slide_2_title }}</h2>
        <p>{{ settings.slide_2_subtitle }}</p>
        <a href="{{ settings.slide_2_link }}" class="btn btn-default">{{ settings.slide_2_button_text }}</a>
      </div>
    </div>
  {% endif %}

  {% if settings.slide_3_show == true %}
    <div class="item">      
      <img src="{{ 'slide_3.jpg' | asset_url }}" />
      <div class="item-text {{ settings.slide_3_position }}">
        <h2>{{ settings.slide_3_title }}</h2>
        <p>{{ settings.slide_3_subtitle }}</p>
        <a href="{{ settings.slide_3_link }}" class="btn btn-default">{{ settings.slide_3_button_text }}</a>
      </div>
    </div>
  {% endif %}

  {% if settings.slide_4_show == true %}
    <div class="item">      
      <img src="{{ 'slide_4.jpg' | asset_url }}" />
      <div class="item-text {{ settings.slide_4_position }}">
        <h2>{{ settings.slide_4_title }}</h2>
        <p>{{ settings.slide_4_subtitle }}</p>
        <a href="{{ settings.slide_4_link }}" class="btn btn-default">{{ settings.slide_4_button_text }}</a>
      </div>
    </div>
  {% endif %}

  {% if settings.slide_5_show == true %}
    <div class="item">      
      <img src="{{ 'slide_5.jpg' | asset_url }}" />
      <div class="item-text {{ settings.slide_5_position }}">
        <h2>{{ settings.slide_5_title }}</h2>
        <p>{{ settings.slide_5_subtitle }}</p>
        <a href="{{ settings.slide_5_link }}" class="btn btn-default">{{ settings.slide_5_button_text }}</a>
